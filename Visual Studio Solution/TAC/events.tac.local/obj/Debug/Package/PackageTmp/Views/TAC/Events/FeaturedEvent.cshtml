@model RenderingModel
@{ 
    var url = Sitecore.Links.LinkManager.GetItemUrl(Model.Item);
}

<div class="thumbnail well @Model.Rendering.Parameters["CssClass"]">
    <a href="@url">
        <!-- <img src="Images/Hiking-the-Italian-Alps.jpg" class="img-responsive" alt="Hiking the Italian Alps" width="500" height="333" /> -->
        @Html.Sitecore().Field("EventImage", new { @class="img-responsive", mw=500, mh=333 })
    </a>
    <div class="caption">
        <!-- <h3 class="teaser-heading">Hiking the Italian Alps</h3> -->
        <h3 class="teaser-heading">@Html.Sitecore().Field("ContentHeading")</h3>
        <p>
            <!-- Hike one of the most beautiful mountain landscapes in the world. Italy’s dramatic rocky rooftop, the Dolomites offer spectacular views and lovely surroundings, especially on this spring tour. You will enjoy the wild Alpine meadows, snow-tipped peaks and cobblestone mountain villages. We will take scenic paths from Cortina d’ Ampezzo to Alta   Badia and learn about the fascinating history of the region along the way. -->
            @Html.Sitecore().Field("ContentIntro")
        </p>
        <a href="@url" class="btn btn-default">Read more</a>
    </div>
</div>
